# Document Summarizer Agent - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# =============================================================================
# S3 STORAGE CONFIGURATION
# =============================================================================
S3_BUCKET_NAME=document-summarizer-production-documents

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL RDS instance
DATABASE_URL=postgresql://postgres:your_password@your-rds-endpoint.amazonaws.com:5432/docprocessing

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# DynamoDB table for caching
DYNAMODB_CACHE_TABLE=document-summarizer-production-cache

# ElastiCache Redis (optional - for high-performance caching)
ELASTICACHE_ENDPOINT=your-redis-cluster.cache.amazonaws.com

# =============================================================================
# TASK QUEUE CONFIGURATION
# =============================================================================
# SQS queue for task processing
SQS_QUEUE_NAME=document-summarizer-production-task-queue
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/document-summarizer-production-task-queue

# Lambda function for task processing
LAMBDA_FUNCTION_NAME=document-summarizer-production-task-processor

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Groq API for LLM processing
GROQ_API_KEY=your_groq_api_key_here

# LangChain configuration (optional)
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=DocumentSummarizerAgent

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret key (generate with: openssl rand -hex 32)
SECRET_KEY=your_super_secret_jwt_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760

# Allowed file extensions
ALLOWED_EXTENSIONS=[".pdf", ".txt", ".docx"]

# Allowed MIME types
ALLOWED_MIME_TYPES=["application/pdf", "text/plain", "application/vnd.openxmlformats-officedocument.wordprocessingml.document"]

# =============================================================================
# CORS AND SECURITY
# =============================================================================
# Allowed origins for CORS (use specific domains in production)
ALLOWED_ORIGINS=["*"]

# Allowed hosts
ALLOWED_HOSTS=["*"]

# =============================================================================
# RATE LIMITING
# =============================================================================
# Maximum uploads per minute per user
UPLOAD_RATE_LIMIT=2

# Maximum processing time in seconds
MAX_PROCESSING_TIME=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
